%p.float-right= link_to 'New Import', new_import_path, { class: 'btn btn-primary' }

%h1 Imports

%table.table
  %thead
    %tr
      %th
        &nbsp;
      %th
        Description
      %th
        State
      %th
        Created Date

    %tbody
      - for import in imports
        %tr
          %td= import.id
          %td
            %a{ href: import.uri }= import.description
          %td= import.state.humanize
          %td= import.created_at.strftime('%d %b %Y, %H:%M:%S')
